<li id="invoice-<%= invoice.id %>">
  <span class="user"><%= link_to invoice.user.name, invoice.user %></span>
  <span class="content">
    <%= invoice.content %>
    <%= invoice.amount %>
    <%= image_tag invoice.picture.url if invoice.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(invoice.created_at) %> ago.
    <% if current_user?(invoice.user) %>
      <%= link_to "delete", invoice, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>