<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.invoices.any? %>
      <h3>Invoices (<%= @user.invoices.count %>)</h3>
      <ol class="invoices">
        <%= render @invoices %>
      </ol>
      <%= will_paginate @invoices %>
    <% end %>
  </div>
</div>